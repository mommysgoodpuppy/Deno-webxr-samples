    "version": "0.2.0",
    "configurations": [
        {   "name": "webxr server",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/server.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "Deno",
            "runtimeArgs": [
                "run",
                "--watch",
                "--inspect-wait",
                "--allow-net",
                "--allow-read",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        },
        {   "name": "denoshot",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/denoshot.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "Deno",
            "runtimeArgs": [
                "run",
                "--watch",
                "--allow-env",
                "--allow-write",
                "--allow-run",
                "--unstable",
                "--inspect-wait",
                "--allow-net",
                "--allow-read",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        }
    ]
}